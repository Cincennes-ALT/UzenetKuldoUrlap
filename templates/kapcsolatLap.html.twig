{% form_theme urlap 'bootstrap_5_layout.html.twig' %}
{% block stylesheets %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
{% endblock %}
{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
    crossorigin="anonymous"></script>
{% endblock %}
{% block body %}

<div id=test margin="auto">
    <h1>Kapcsolatfelvétel:</h1>
    <div id="urlap">
        {{form_start(urlap)}}
        {{form_errors(urlap)}}
        {{form_row(urlap.Nev, {"label":"Név"})}}
        {{form_row(urlap.Email, {"label": "Email"})}}
        {{form_row(urlap.Uzenet, {"label": "Üzenet"})}}
        {{form_row(urlap.Kuldes, {"label": "Küldés"})}}
        {{form_end(urlap)}}
    </div>
</div>
{% endblock %}